@using TrainMe.Web.Areas.Course.Controllers

@model TrainMe.Web.Areas.Course.InputModels.Course.CourseDeleteInputModel
<div class="row">
    <div class="col-xs-1">
        @(Html.ActionLink<CourseController>("Edit!", c => c.Edit(Model.CourseId), htmlAttributes: new { @class = "btn btn-warning" }))
    </div>
    <div class="col-xs-1">
        @using (Html.BeginForm<CourseController>(c => c.Delete(null), FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.CourseId)
            <button type="submit" class="btn btn-danger">Delete!</button>
        }
    </div>
</div>