@model string

@Html.HiddenFor(m => m)
@Html.ValidationMessageFor(m => m)

<script>
    function success(e) {
        var imageFileName = e.response.ImageFileName;

        $("#ImageFileName").val(imageFileName).trigger("change");
    }
</script>

@(Html.Kendo().Upload()
    .Name("categoryImage")
    .Multiple(false)
    .Async(a => a
        .Save("Save", "Category")
        .AutoUpload(true)
    )
    .Events(e => e.Success("success"))
)
